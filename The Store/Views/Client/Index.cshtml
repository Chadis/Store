@model IEnumerable<The_Store.IMAGE>

@{
    ViewBag.Title = "Index";
}

<h1>Welcome to Da Corner Store</h1>

<p>

    @using (Html.BeginForm("Index", "Client", FormMethod.Get))
    {
    <p> @Html.TextBox("searchString") <input type="submit" value="Search" /> </p>
    }
</p>
<table class="table">
    <tr>
        <th>
            Product
        </th>
        <th>
            Description
        </th>
        <th>
            Specification
        </th>
        <th>
            Price
        </th>
        <th>
            Handling Charge
        </th>
        <th>
            Shipping Details
        </th>
        <th>
            Quantity
        </th>
        <th>
            Feature Picture
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PRODUCT.item)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRODUCT.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRODUCT.specification)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRODUCT.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRODUCT.handling_charge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRODUCT.shipping_details)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRODUCT.quantity)
        </td>
        <td>
            <img src="@Url.Content("~/Images/"+ item.path)" height="100" width="140" />
        </td>
        <td>
            @Html.ActionLink("Add To Cart", "AddToCart", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
