@model IEnumerable<The_Store.ORDER_DETAIL>

@{
    ViewBag.Title = "ViewCart";
}

<h2>Your Cart</h2>

<p>
    <a role="button" class="btn btn-primary" href="~/Client/Index">Go Back to da Store</a>
</p>
<table class="table">
    <tr>
        <th>
            Product Name
        </th>
        <th>
            Description
        </th>
        <th>
            Specification 
        </th>
        <th>
            Price
        </th>
        <th>
            Handling Charge
        </th>
        <th>
            Shipping Details
        </th>
        <th>
            Quantity
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PRODUCT.item)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRODUCT.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRODUCT.specification)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRODUCT.price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRODUCT.handling_charge)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PRODUCT.shipping_details)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.quantity)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<a role="button" href="~/Client/CheckOut" class="btn btn-primary">CheckOut</a>
